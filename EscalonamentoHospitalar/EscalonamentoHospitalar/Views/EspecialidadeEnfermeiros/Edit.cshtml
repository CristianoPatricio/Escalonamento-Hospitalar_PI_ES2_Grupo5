@model EscalonamentoHospitalar.Models.EspecialidadeEnfermeiro

@{
    ViewData["Title"] = "Alterar Especialidade";
}

<h2>Alterar a especialidade <b>@Html.DisplayFor(model => model.Especialidade)</b></h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="EspecialidadeEnfermeiroId" />
            <div class="form-group">
                <label asp-for="Especialidade" class="control-label">Nome da Especialidade</label>
                <input asp-for="Especialidade" class="form-control" />
                <span asp-validation-for="Especialidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar alterações" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"> <input type="submit" value="Voltar à lista" class="btn btn-default" /></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

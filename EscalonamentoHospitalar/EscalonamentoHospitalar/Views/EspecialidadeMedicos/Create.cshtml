@model EscalonamentoHospitalar.Models.EspecialidadeMedico

@{
    ViewData["Title"] = "Inserir";
}

<h2>Inserir uma nova especialidade</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeEspecialidade" class="control-label">Especialidade</label>
                <input asp-for="NomeEspecialidade" class="form-control" />
                <span asp-validation-for="NomeEspecialidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Inserir" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-default">Voltar à lista de especialidades</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
